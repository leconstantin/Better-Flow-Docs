  "openapi": "3.1.0",
  "info": {
    "title": "Better Flow Articles",
    "description": "An API for managing articles in Better Flow, including drafting, reviewing, publishing, and archiving.",
    "license": {
      "name": "MIT"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://tacit-gecko-719.convex.site"
    }
  ],
  "security": [
    {
      "bearerAuth": []
